<form action="/cates/save-edit" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="{{cate._id}}">
    <div>
        <label for="">Tên danh mục</label>
        <br>
        <input type="text" name="name" value="{{cate.name}}">
    </div>
    <div>
        <img src="{{cate.image}}" width="150">
        <br>
        <label for="">Ảnh danh mục</label>
        <br>
        <input type="file" name="image" >
    </div>
    <div>
        <label for="">Mô tả</label>
        <br>
        <textarea name="description" rows="10">{{cate.description}}</textarea>
    </div>
    <div>
        <button type="submit">Lưu</button>
        <a href="/cates">Hủy</a>
    </div>
</form>