{{{select_options categories "cate_id" "5c9db0193b9e3671381e33cb"}}}

<table>
    <thead>
        <th>Name</th>
        <th>Image</th>
        <th width="500">Description</th>
        <th>
            <a href="/cates/add">Thêm danh mục</a>
        </th>
    </thead>
    <tbody>
        {{#each categories}}
            <tr>
                <td>{{this.name}}</td>
                <td>
                    <img src="{{this.image}}" width="100">
                </td>
                <td>{{this.description}}</td>
                <td>
                    <a href="/cates/edit/{{this._id}}">Sửa</a>
                    <a href="javascript:;" onclick="confirmDelete('{{this.name}}', '/cates/remove/{{this._id}}');">Xóa</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
<script>

    function confirmDelete(catename, url){
        var conf = confirm(`Bạn có chắc chắn muốn xóa danh mục ${catename} hay không?`);
        if(conf == true){
            window.location.href = url;
        }
    }
</script>
